<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/card_gradient">

    <EditText
        android:id="@+id/characterNameText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_corner_3"
        android:ems="10"
        android:hint="Character Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/characterClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/characterClass"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/rounded_corner_3"
        android:ems="10"
        android:hint="Class"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterNameText" />

    <EditText
        android:id="@+id/levelText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_corner_3"
        android:ems="10"
        android:hint="Level"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterNameText" />

    <EditText
        android:id="@+id/strText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Strength"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelText" />

    <EditText
        android:id="@+id/dexText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Dexterity"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strText" />

    <EditText
        android:id="@+id/consText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Constitution"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dexText" />

    <EditText
        android:id="@+id/intelText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Intelligence"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consText" />

    <EditText
        android:id="@+id/wisText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:hint="Wisdom"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intelText" />

    <EditText
        android:id="@+id/charText"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:textAlignment="center"
        android:hint="Charisma"
        android:textColor="@color/myWhite"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wisText" />

    <Button
        android:id="@+id/add_character_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_2"
        android:text="add character"
        android:textColor="@color/myWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charisma"
        app:layout_constraintVertical_bias="0.706" />

    <TextView
        android:id="@+id/str"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="36dp"
        android:text="STR"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@+id/dex"
        app:layout_constraintEnd_toStartOf="@+id/strText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterClass" />

    <TextView
        android:id="@+id/dex"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="37dp"
        android:text="DEX"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@+id/cons"
        app:layout_constraintEnd_toStartOf="@+id/dexText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/str" />

    <TextView
        android:id="@+id/cons"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="37dp"
        android:text="CONS"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@+id/intel"
        app:layout_constraintEnd_toStartOf="@+id/consText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dex" />

    <TextView
        android:id="@+id/intel"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="36dp"
        android:text="INT"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@+id/wis"
        app:layout_constraintEnd_toStartOf="@+id/intelText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cons" />

    <TextView
        android:id="@+id/wis"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="36dp"
        android:text="WIS"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@+id/charisma"
        app:layout_constraintEnd_toStartOf="@+id/wisText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intel" />

    <TextView
        android:id="@+id/charisma"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:text="CHAR"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toStartOf="@+id/charText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wis" />

    <TextView
        android:id="@+id/require"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner_2"
        android:text="@string/require"
        android:textAlignment="center"
        android:textColor="@color/myWhite"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/add_character_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charText" />


</androidx.constraintlayout.widget.ConstraintLayout>