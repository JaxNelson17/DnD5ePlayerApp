        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner_2"
        app:layout_constraintStart_toEndOf="@+id/d6"
        app:layout_constraintTop_toBottomOf="@+id/rollD8" />

    <Button
        android:id="@+id/rollD4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:text="Roll"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d4"
        app:layout_constraintTop_toBottomOf="@+id/rollD6"
        app:layout_constraintVertical_bias="0.785" />

    <TextView
        android:id="@+id/d20_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="TextView"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/rollD20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d12_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="TextView"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toEndOf="@+id/rollD12"
        app:layout_constraintTop_toBottomOf="@+id/d20_result" />

    <TextView
        android:id="@+id/d10_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
