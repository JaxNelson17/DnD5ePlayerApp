        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_d20" />

    <ImageView
        android:id="@+id/d12"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d20"
        app:srcCompat="@drawable/d12" />

    <ImageView
        android:id="@+id/d10"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d12"
        app:srcCompat="@drawable/d10" />

    <ImageView
        android:id="@+id/d10_2"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d10"
        app:srcCompat="@drawable/d10" />

    <ImageView
        android:id="@+id/d8"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d10_2"
        app:srcCompat="@drawable/d8" />

    <ImageView
        android:id="@+id/d6"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d8"
        app:srcCompat="@drawable/d6" />

    <ImageView
        android:id="@+id/d4"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d6"
        app:srcCompat="@drawable/d4" />

    <Button
        android:id="@+id/rollD20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="Roll"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner_2"
        app:layout_constraintStart_toEndOf="@+id/d20"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rollD12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="Roll"
        android:textColor="@color/myWhite"
        android:background="@drawable/rounded_corner_2"
        app:layout_constraintStart_toEndOf="@+id/d12"
        app:layout_constraintTop_toBottomOf="@+id/rollD20" />

    <Button
        android:id="@+id/rollD10"
        android:layout_width="wrap_content"
